ion-view(title="Find")
  ion-nav-buttons(side="left")
    button.button.button-clear(ng-click="openModal()") Filter
  ion-nav-buttons(side="right")
    a.button.button-clear(href="#/tab/map") Map
  ion-content.bg-grey
    ng-single-select(options="options")
    a.menu-card(ng-repeat="item in items | filter:search" href="#/tab/find/item/{{item._id}}")
      div.menu-card-content
        div.item.item-divider {{item.name}}
        img(src='{{item.top_image_url}}')
        div.menu-card-footer {{item.stars}}
