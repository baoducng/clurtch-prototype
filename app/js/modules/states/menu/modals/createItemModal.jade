div.modal
  ion-header-bar.bar-positive
    button.button.button-clear(ng-click="closeModal()") Cancel
    h1.title Add Item
    button.button.button-clear(ng-click="addItem(newItem)") Done
  ion-content
    ion-list
      label.item.item-input.item-floating-label.bg-white
        span.input-label Please be precise
        input(type="text" placeholder="Menu Item Title" ng-model="newItem.name")
      label.item.item-input.item-floating-label.bg-white
        span.input-label Description
        textarea(ng-model="newItem.description" placeholder="Description")
      label.item.item-input.item-floating-label.bg-white
        textarea(ng-model="newItem.price" placeholder="Price")
